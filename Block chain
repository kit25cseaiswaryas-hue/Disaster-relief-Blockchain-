  <script>
    const defaultConfig = {
      platform_title: "Global Relief Chain",
      platform_tagline: "Transparent Aid Distribution Powered by Trust",
      stats_title: "Platform Statistics",
      distribution_title: "Distribution Ledger",
      form_title: "New Distribution Request",
      background_color: "#0F766E",
      surface_color: "#FFFFFF",
      text_color: "#1F2937",
      primary_action_color: "#10B981",
      secondary_action_color: "#0E7490",
      font_family: "system-ui",
      font_size: 16
    };

    let distributions = [];
    let isProcessing = false;

    const dataHandler = {
      onDataChanged(data) {
        distributions = data;
        updateStatistics();
        renderDistributions();
      }
    };

    async function initializeApp() {
      const initResult = await window.dataSdk.init(dataHandler);
      if (!initResult.isOk) {
        showMessage("Failed to initialize platform", "error");
        return;
      }

      if (window.elementSdk) {
        window.elementSdk.init({
          defaultConfig,
          onConfigChange: async (config) => {
            document.getElementById('platform-title').textContent = config.platform_title || defaultConfig.platform_title;
            document.getElementById('platform-tagline').textContent = config.platform_tagline || defaultConfig.platform_tagline;
            document.getElementById('stats-title').textContent = config.stats_title || defaultConfig.stats_title;
            document.getElementById('distribution-title').textContent = config.distribution_title || defaultConfig.distribution_title;
            document.getElementById('form-title').textContent = config.form_title || defaultConfig.form_title;

            const baseFont = config.font_size || defaultConfig.font_size;
            const customFont = config.font_family || defaultConfig.font_family;
            const baseFontStack = 'system-ui, -apple-system, sans-serif';
            const fontStack = `${customFont}, ${baseFontStack}`;

            document.getElementById('platform-title').style.fontSize = `${baseFont * 2}px`;
            document.getElementById('platform-title').style.fontFamily = fontStack;
            document.getElementById('platform-tagline').style.fontSize = `${baseFont * 1.125}px`;
            document.getElementById('platform-tagline').style.fontFamily = fontStack;
            document.getElementById('stats-title').style.fontSize = `${baseFont * 1.5}px`;
            document.getElementById('stats-title').style.fontFamily = fontStack;
            document.getElementById('distribution-title').style.fontSize = `${baseFont * 1.5}px`;
            document.getElementById('distribution-title').style.fontFamily = fontStack;
            document.getElementById('form-title').style.fontSize = `${baseFont * 1.5}px`;
            document.getElementById('form-title').style.fontFamily = fontStack;

            const bgColor = config.background_color || defaultConfig.background_color;
            const textColor = config.text_color || defaultConfig.text_color;
            const primaryColor = config.primary_action_color || defaultConfig.primary_action_color;

            document.getElementById('app').style.background = `linear-gradient(135deg, ${bgColor} 0%, #0E7490 50%, #1E40AF 100%)`;
            
            const submitBtn = document.getElementById('submit-btn');
            submitBtn.style.background = `linear-gradient(135deg, ${primaryColor} 0%, #059669 100%)`;
          },
          mapToCapabilities: (config) => ({
            recolorables: [
              {
                get: () => config.background_color || defaultConfig.background_color,
                set: (value) => {
                  if (window.elementSdk && window.elementSdk.config) {
                    window.elementSdk.config.background_color = value;
                    window.elementSdk.setConfig({ background_color: value });
                  }
                }
              },
              {
                get: () => config.text_color || defaultConfig.text_color,
                set: (value) => {
                  if (window.elementSdk && window.elementSdk.config) {
                    window.elementSdk.config.text_color = value;
                    window.elementSdk.setConfig({ text_color: value });
                  }
                }
              },
              {
                get: () => config.primary_action_color || defaultConfig.primary_action_color,
                set: (value) => {
                  if (window.elementSdk && window.elementSdk.config) {
                    window.elementSdk.config.primary_action_color = value;
                    window.elementSdk.setConfig({ primary_action_color: value });
                  }
                }
              }
            ],
            borderables: [],
            fontEditable: {
              get: () => config.font_family || defaultConfig.font_family,
              set: (value) => {
                if (window.elementSdk && window.elementSdk.config) {
                  window.elementSdk.config.font_family = value;
                  window.elementSdk.setConfig({ font_family: value });
                }
              }
            },
            fontSizeable: {
              get: () => config.font_size || defaultConfig.font_size,
              set: (value) => {
                if (window.elementSdk && window.elementSdk.config) {
                  window.elementSdk.config.font_size = value;
                  window.elementSdk.setConfig({ font_size: value });
                }
              }
            }
          }),
          mapToEditPanelValues: (config) => new Map([
            ["platform_title", config.platform_title || defaultConfig.platform_title],
            ["platform_tagline", config.platform_tagline || defaultConfig.platform_tagline],
            ["stats_title", config.stats_title || defaultConfig.stats_title],
            ["distribution_title", config.distribution_title || defaultConfig.distribution_title],
            ["form_title", config.form_title || defaultConfig.form_title]
          ])
        });
      }

      setupForm();
    }

    function setupForm() {
      const form = document.getElementById('distribution-form');
      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        if (isProcessing) return;

        if (distributions.length >= 999) {
          showMessage("Maximum limit of 999 distributions reached. Platform capacity full.", "error");
          return;
        }

        isProcessing = true;
        const submitBtn = document.getElementById('submit-btn');
        submitBtn.disabled = true;
        submitBtn.textContent = 'Processing Request...';

        const formData = {
          id: Date.now().toString(),
          beneficiary_name: document.getElementById('beneficiary-name').value.trim(),
          location: document.getElementById('location').value.trim(),
          disaster_type: document.getElementById('disaster-type').value,
          amount: parseFloat(document.getElementById('amount').value),
          status: 'pending',
          timestamp: new Date().toISOString()
        };

        const result = await window.dataSdk.create(formData);

        if (result.isOk) {
          showMessage(`Distribution request submitted for ${formData.beneficiary_name}`, "success");
          form.reset();
        } else {
          showMessage("Failed to submit request. Please try again.", "error");
        }

        isProcessing = false;
        submitBtn.disabled = false;
        submitBtn.textContent = 'Submit Distribution Request';
      });
    }

    function updateStatistics() {
      const totalAmount = distributions.reduce((sum, d) => sum + d.amount, 0);
      const uniqueBeneficiaries = new Set(distributions.map(d => d.beneficiary_name)).size;
      const pendingCount = distributions.filter(d => d.status === 'pending').length;
      const completedCount = distributions.filter(d => d.status === 'distributed').length;
      const successRate = distributions.length > 0 ? Math.round((completedCount / distributions.length) * 100) : 100;

      document.getElementById('total-amount').textContent = `$${totalAmount.toLocaleString()}`;
      document.getElementById('total-beneficiaries').textContent = uniqueBeneficiaries;
      document.getElementById('pending-count').textContent = pendingCount;
      document.getElementById('success-rate').textContent = `${successRate}%`;
    }

    function renderDistributions() {
      const container = document.getElementById('distribution-list');
      
      if (distributions.length === 0) {
        container.innerHTML = `
          <div class="blockchain-card p-6 rounded-xl text-center" style="color: #D1FAE5;">
            <p>No distributions recorded yet. Submit your first request above.</p>
          </div>
        `;
        return;
      }

      const existingItems = new Map(
        [...container.children].map(el => [el.dataset.itemId, el])
      );

      const sortedDistributions = [...distributions].sort((a, b) => 
        new Date(b.timestamp) - new Date(a.timestamp)
      );

      sortedDistributions.forEach(dist => {
        if (existingItems.has(dist.id)) {
          updateDistributionElement(existingItems.get(dist.id), dist);
          existingItems.delete(dist.id);
        } else {
          container.appendChild(createDistributionElement(dist));
        }
      });

      existingItems.forEach(el => el.remove());
    }

    function createDistributionElement(dist) {
      const div = document.createElement('div');
      div.dataset.itemId = dist.id;
      updateDistributionElement(div, dist);
      return div;
    }

    function updateDistributionElement(element, dist) {
      const statusClass = `status-${dist.status}`;
      const statusText = dist.status.charAt(0).toUpperCase() + dist.status.slice(1);
      const date = new Date(dist.timestamp).toLocaleString();

      element.className = 'blockchain-card p-6 rounded-xl';
      element.innerHTML = `
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h3 class="text-xl font-bold" style="color: #FFFFFF;">${dist.beneficiary_name}</h3>
              <span class="${statusClass} px-3 py-1 rounded-full text-sm font-semibold" style="color: #1F2937;">${statusText}</span>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-2 text-sm" style="color: #D1FAE5;">
              <div><strong>Location:</strong> ${dist.location}</div>
              <div><strong>Disaster:</strong> ${dist.disaster_type}</div>
              <div><strong>Date:</strong> ${date}</div>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="text-right">
              <div class="text-2xl font-bold" style="color: #FFFFFF;">$${dist.amount.toLocaleString()}</div>
              <div class="text-xs" style="color: #A7F3D0;">Allocation</div>
            </div>
            <div class="flex flex-col gap-2">
              ${dist.status === 'pending' ? `
                <button onclick="updateStatus('${dist.id}', 'verified')" class="px-4 py-2 rounded-lg text-sm font-semibold transition-all hover:shadow-lg" style="background: #34D399; color: #FFFFFF;">
                  Verify
                </button>
              ` : ''}
              ${dist.status === 'verified' ? `
                <button onclick="updateStatus('${dist.id}', 'distributed')" class="px-4 py-2 rounded-lg text-sm font-semibold transition-all hover:shadow-lg" style="background: #60A5FA; color: #FFFFFF;">
                  Distribute
                </button>
              ` : ''}
              <button onclick="deleteDistribution('${dist.id}')" class="px-4 py-2 rounded-lg text-sm font-semibold transition-all hover:shadow-lg" style="background: #EF4444; color: #FFFFFF;">
                Delete
              </button>
            </div>
          </div>
        </div>
      `;
    }

    window.updateStatus = async function(id, newStatus) {
      const dist = distributions.find(d => d.id === id);
      if (!dist) return;

      dist.status = newStatus;
      const result = await window.dataSdk.update(dist);

      if (result.isOk) {
        showMessage(`Status updated to ${newStatus}`, "success");
      } else {
        showMessage("Failed to update status", "error");
      }
    };

    window.deleteDistribution = async function(id) {
      const dist = 
